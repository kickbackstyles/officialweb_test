generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}


model Item {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  thumbnailImage String?
  title String
  context String?
  colors Color[]
  sizes Size[]
  price String
  discountPrice String?
  tags TagsOnItems[]
}

model Color {
  id Int @id @default(autoincrement())
  title String
  item Item? @relation(fields: [itemId], references: [id])
  itemId Int?
  images Image[]
}

model Size {
  id Int @id @default(autoincrement())
  title String
  item Item? @relation(fields: [itemId], references: [id])
  itemId Int?
}

model Image {
  id Int @id @default(autoincrement())
  url String
  alt String
  color Color? @relation(fields: [colorId], references: [id])
  colorId Int?
  priority Int?
}

model Tag {
  id Int @id @default(autoincrement())
  title String
  item TagsOnItems[]
}

model TagsOnItems {
  item       Item     @relation(fields: [itemId], references: [id])
  itemId     Int 
  tag   Tag @relation(fields: [tagId], references: [id])
  tagId Int 
  assignedAt DateTime @default(now())
  assignedBy String
  @@id([itemId, tagId])
}



// projects page schema
model Project {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  title String
  date String?
  location String?
  thumbnailImageUrl String?
  thumbnailContext String?
  description String?
  projectTags ProjectTagsOnProjects[]

}

model ProjectTag {
  id Int @id @default(autoincrement())
  title String
  project ProjectTagsOnProjects[]
  
}

model ProjectTagsOnProjects {
  project       Project    @relation(fields: [projectId], references: [id])
  projectId     Int 
  projectTag   ProjectTag @relation(fields: [projectTagId], references: [id])
  projectTagId Int 
  assignedAt DateTime @default(now())
  assignedBy String
  @@id([projectId, projectTagId])
}


